{
  "name": "yaya-message",
  "version": "1.1.7",
  "description": "牙牙消息",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "yk1z",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-media-server": "^4.2.4"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.3.0"
  },
  "build": {
    "appId": "com.yaya.message",
    "productName": "牙牙消息",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "icon.png",
      "members_id.csv",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe"
      },
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
